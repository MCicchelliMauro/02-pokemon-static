---
const links = [
    { text: 'Listado', href: '/' },
    { text: 'Paginado', href: '/pokemons/1' },
    { text: 'Favoritos', href: '/favorites' },
    { text: 'Islands', href: '/islands' },
    
]

const currentPath = Astro.url.pathname

---

<!-- component -->
<nav class="shadow bg-slate-900">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
  <!-- {
    links.map(({ href, text }) => (
    <a
      href={ href }
      class:list = {["text-gray-300 dark:text-gray-200 border-b-2 mx-1.5 sm:mx-6",
        {
          "border-blue-500": currentPath === href,
          "border-transparent": currentPath !== href
        }
      ]}
      >{text}</a> 

    ))
  } -->

  {
    links.map(({ href, text }) => (
    
    <div>
    <a
      href={ href }
      class = "text-gray-300 dark:text-gray-200 mx-1.5 sm:mx-6"
        
     
      >{text}</a> 

      {
        currentPath === href ? (
          <div 
          transition:name="menu-line"
          class="border-b-2 border-blue-500 mx-4" />
        ): (
          <div class="border-b-2 border-transparent mx-4" />
        )
      }  
      
    </div>
    ))
  }
   
    
  </div>
</nav>
